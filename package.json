{
  "publisher": "rikka",
  "name": "folder-alias",
  "displayName": "folder-alias",
  "version": "0.1.0",
  "description": "folder alias",
  "author": "Rikka",
  "license": "GPLV3",
  "homepage": "https://github.com/Muromi-Rikka/folder-alias#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Muromi-Rikka/folder-alias"
  },
  "bugs": {
    "url": "https://github.com/Muromi-Rikka/folder-alias/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "media/icons.png",
  "files": [
    "LICENSE",
    "dist/*",
    "media/*"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "folder-alias.addAlias",
        "title": "Add Alias",
        "icon": {
          "light": "media/light/edit.svg",
          "dark": "media/dark/edit.svg"
        }
      },
      {
        "command": "folder-alias.addTooltip",
        "title": "Add Tooltip",
        "icon": {
          "light": "media/light/edit.svg",
          "dark": "media/dark/edit.svg"
        }
      },
      {
        "command": "folder-alias.delAlias",
        "title": "Delete Alias",
        "icon": {
          "light": "media/light/edit.svg",
          "dark": "media/dark/edit.svg"
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "folder-alias.addAlias",
          "group": "1_modification"
        },
        {
          "command": "folder-alias.addTooltip",
          "group": "1_modification"
        },
        {
          "command": "folder-alias.delAlias",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "pnpm build --watch --sourcemap",
    "prepare": "pnpm update:gen",
    "update:gen": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "pnpm build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.1",
    "@types/node": "^18.19.103",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.4.1",
    "destr": "^2.0.5",
    "eslint": "^9.27.0",
    "mkdirp": "^3.0.1",
    "pathe": "^2.0.3",
    "reactive-vscode": "^0.2.17",
    "taze": "^19.1.0",
    "tsdown": "^0.11.12",
    "typescript": "^5.8.3",
    "ufo": "^1.6.1",
    "vscode-ext-gen": "^1.0.2"
  }
}
