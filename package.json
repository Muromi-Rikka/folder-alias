{
  "publisher": "rikka",
  "name": "folder-alias",
  "displayName": "folder-alias",
  "version": "0.1.1",
  "description": "folder alias",
  "author": "Rikka",
  "license": "GPLV3",
  "homepage": "https://github.com/Muromi-Rikka/folder-alias#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Muromi-Rikka/folder-alias"
  },
  "bugs": {
    "url": "https://github.com/Muromi-Rikka/folder-alias/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "media/icons.png",
  "files": [
    "LICENSE",
    "README.md",
    "README.zh-CN.md",
    "dist/*",
    "media/*"
  ],
  "engines": {
    "vscode": "^1.104.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "folder-alias.addAlias",
        "title": "Add Alias",
        "icon": {
          "light": "media/light/edit.svg",
          "dark": "media/dark/edit.svg"
        }
      },
      {
        "command": "folder-alias.refresh",
        "title": "Refresh Aliases",
        "icon": {
          "light": "media/light/refresh.svg",
          "dark": "media/dark/refresh.svg"
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "folder-alias.addAlias",
          "group": "1_modification"
        },
        {
          "command": "folder-alias.refresh",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "folder-alias.refresh",
          "when": "workspaceHasFolderAlias"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "pnpm build --watch --sourcemap",
    "prepare": "pnpm update:gen",
    "update:gen": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "pnpm run build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm run publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.19.127",
    "@types/vscode": "^1.104.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.1",
    "bumpp": "^10.2.3",
    "destr": "^2.0.5",
    "eslint": "^9.36.0",
    "lodash-es": "^4.17.21",
    "mkdirp": "^3.0.1",
    "pathe": "^2.0.3",
    "reactive-vscode": "^0.3.2",
    "taze": "^19.7.0",
    "tsdown": "^0.15.4",
    "typescript": "^5.9.2",
    "ufo": "^1.6.1",
    "vscode-ext-gen": "^1.2.1"
  }
}
